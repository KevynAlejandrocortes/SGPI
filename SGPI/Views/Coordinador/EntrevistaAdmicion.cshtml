@model SGPI.Models.Usuario
@{
    ViewData["Title"] = "EntrevistaAdmicion";
}


<br />
<h1 style="text-align:left">Menú principal coordinador</h1>
<div class="row">
</div>

<ul class="navbar navbar-expand-sm bg-dark navbar-dard sticky-top">

    <li class="nav-item">
        <a class="nav-link" style="color:white" href="https://localhost:5001/Coordinador/MenuCoordinador?">Menu Coordinador</a>
    </li>

    <li class="nav-item">
        <a class="nav-link" style="color:white" href="ConsultarEstudiante">Buscar estudiante</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" style="color:white" href="ProgramarAsignatura">Programar asignatura</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" style="color:white" href="Homologar">Homologar asignatura</a>
    </li>
     <li class="nav-item">
        <a class="nav-link" style="color:white" href="EntrevistaAdmicion">Generar entrevista</a>
    </li>

</ul>
<div class="row">
   
   
</div>
<br />
<div class="container" style="margin-top:65px">
    <div class="row">

        <div>
            <div class="btn btn-outline-darck" style="border:solid 2px; margin-left: 100px">
                @Html.DropDownList("IdTipoDoc", new SelectList(ViewBag.tipodoc, "IdTipoDoc", "ValTipoDoc"), "Documento")
            </div>
            <div class="btn btn-outline-darck" style="border:solid 2px; margin-left: 100px">
                @Html.DropDownList("IdPrograma", new SelectList(ViewBag.programa, "IdPrograma", "ValPrograma"), "Programa")
            </div>
            <div class="btn btn-outline-darck" style="border:solid 2px; margin-left: 100px">
                @Html.DropDownList("IdRol", new SelectList(ViewBag.rol, "IdRol", "ValRol"), "Rol")
            </div>
            <div class="btn btn-outline-darck" style="border:solid 2px; margin-left: 100px">
                @Html.DropDownList("IdGenero", new SelectList(ViewBag.genero, "IdGenero", "ValGenero"), "Genero")
            </div>
        </div>
        <div class="row" style="margin-top:30px">
            <div class="form-group" style="margin-left:120px">
                <label asp-for="Documento" class="control-label" style=""><b>N.Documento</b></label>
                <input asp-for="Documento" type="number" class="form-control" style="border-color:black; border-width:2px; width:200px" id="ndocumento">
            </div>
            <div class="form-group" style="margin-left:115px">
                <label asp-for="Nombre" class="control-label" style=""><b>nombre</b></label>
                <input asp-for="Nombre" type="text" class="form-control" style="border-color:black; border-width:2px; width:200px" id="nombre">
            </div>
            <div class="form-group" style="margin-left:115px">
                <label asp-for="Apellido" class="control-label" style=""><b>Apellido</b></label>
                <input asp-for="Apellido" type="text" class="form-control" style="border-color:black; border-width:2px; width:200px" id="apellido">
            </div>
        </div>
        <div class="row" style="margin-top:30px">
            <div class="form-group" style="margin-left:120px">
                <label asp-for="Email" class="control-label" style=""><b>Correo</b></label>
                <input asp-for="Email" type="email" class="form-control" style="border-color:black; border-width:2px; width:200px" id="email">
            </div>
            <div class="form-group" style="margin-left:115px">
                <label asp-for="Direccion" class="control-label" style=""><b>Direccion</b></label>
                <input asp-for="Direccion" type="text" class="form-control" style="border-color:black; border-width:2px; width:200px" id="direccion">
            </div>
            <div class="form-group" style="margin-left:115px">
                <label asp-for="Telefono" class="control-label" style=""><b>Telefono</b></label>
                <input asp-for="Telefono" type="text" class="form-control" style="border-color:black; border-width:2px; width:200px" id="telefono">
            </div>
        </div>
        <form method="post">
            <div class="row" style="margin-top:30px">
                <div class="form-group" style="margin-left:120px">
                    <label class="control-label" style=""><b>Fecha Inicio</b></label>
                    <input class="btn btn-outline-dark" type="date" id="start"
                           min="2022-01-01" pattern="MM-dd-yy" name="fecha">
                </div>
                <div class="form-group" style="margin-left:115px">
                    <label class="control-label" style=""><b>Estado</b></label>
                    <input type="text" class="form-control" style="border-color:black; border-width:2px; width:200px" id="direccion"  name="estado">
                </div>
            </div>
           
        </form>
    </div>
   
</div>

<br />

<div>
  
    <button type="submit" class="btn-danger" asp-area="" asp-controller="Login" asp-action="Login" style="margin-left: 500px; margin-top: 35px; margin-bottom: 30px">Cerrar sesión</button>
</div>